<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_90sdp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fandataxiuser.ui.activity.home.HomeActivity"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_ads"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginBottom="@dimen/_100sdp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">

    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/_130sdp"
        android:id="@+id/rv_ride"
       android:background="@drawable/left_bg"
        android:layout_height="wrap_content">
       <TextView
           android:textColor="@color/colorPrimary"
           android:gravity="center"
           android:textStyle="bold"
           android:padding="@dimen/_4sdp"
           android:text="Ride Booking"
           android:fontFamily="@font/clanpro_book"
           android:textSize="@dimen/_14sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"></TextView>
        <ImageView
            android:padding="@dimen/_30sdp"
            android:layout_width="match_parent"
           android:src="@drawable/car_icon"
            android:layout_height="match_parent"
            ></ImageView>
    </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_130sdp"
            android:background="@drawable/rigtht_bg"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/tv_delivery"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                android:fontFamily="@font/clanpro_book"
                android:text="Delivery"
                android:textSize="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:padding="@dimen/_30sdp"
                android:id="@+id/iv_delivery"
                android:layout_width="match_parent"
                android:src="@drawable/delivery_icon"
                android:layout_height="match_parent"
                ></ImageView>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>